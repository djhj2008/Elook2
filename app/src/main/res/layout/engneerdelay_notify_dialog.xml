<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/measurment_add_remind_dialog_height"
        android:layout_marginTop="@dimen/measurment_add_remind_dialog_margin_v"
        android:layout_marginBottom="@dimen/measurment_add_remind_dialog_margin_v"
        android:layout_marginLeft="@dimen/measurment_add_remind_dialog_margin_h"
        android:layout_marginRight="@dimen/measurment_add_remind_dialog_margin_h"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/device_usage_thredhold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:selectAllOnFocus="true"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:inputType="number"
                android:singleLine="true"
                android:background="@null" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/day_3" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/submit_device_config"
        android:layout_width="match_parent"
        android:layout_height="@dimen/measurment_add_remind_dialog_height"
        android:layout_marginTop="@dimen/measurment_add_remind_dialog_margin_v"
        android:layout_marginBottom="@dimen/measurment_add_remind_dialog_margin_v"
        android:layout_marginLeft="@dimen/measurment_add_remind_dialog_margin_h"
        android:layout_marginRight="@dimen/measurment_add_remind_dialog_margin_h"
        android:background="@drawable/white_button_pressed_bg"
        android:text="@string/confirm_add"/>
</LinearLayout>
