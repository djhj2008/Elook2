<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/data_tooltip_day"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_record_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/orange"
            android:textSize="@dimen/measurment_records_view_text_show" />

    <!-- Image view width = 44px, height 39px-->
        <ImageView
            android:id="@+id/dialog_record_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/shape_16" />
</LinearLayout>
